# Gemini API Key for AI services
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_FAST_DEFAULT_MODEL=gemini-3-flash-preview
GEMINI_PRO_DEFAULT_MODEL=gemini-3-pro-preview

# Backend Provider (choose where repositories/auth should point)
# Values: firebase | supabase | mock
# This is intentionally NOT NEXT_PUBLIC to avoid client-side runtime overriding.
BACKEND_PROVIDER=firebase

# Firebase Configuration
FIREBASE_API_KEY=
FIREBASE_AUTH_DOMAIN=
FIREBASE_PROJECT_ID=
FIREBASE_STORAGE_BUCKET=
FIREBASE_MESSAGING_SENDER_ID=
FIREBASE_APP_ID=
FIREBASE_MEASUREMENT_ID=

# Supabase Configuration
SUPABASE_URL=
SUPABASE_ANON_KEY=

# Migration & Admin Credentials (Firebase -> Supabase)
# Firebase Service Account (Required for migration script)
# Get these from: Firebase Console -> Settings -> Service Accounts -> Generate new private key
FIREBASE_CLIENT_EMAIL=
FIREBASE_PRIVATE_KEY=

# Supabase Service Role Key (Required for migration script and server-side auth)
# Get from: Supabase Dashboard -> Settings -> API
SUPABASE_SERVICE_ROLE_KEY=

# Donation Information
PIX_KEY=
BTC_ADDRESS=
USDC_ADDRESS=